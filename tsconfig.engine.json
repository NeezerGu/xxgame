{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "rootDir": "src/engine",
    "outDir": "dist/engine",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": ["src/engine/**/*"],
  "exclude": ["src/engine/**/*.test.ts", "src/engine/**/*.test.tsx"]
}
