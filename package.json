{
  "name": "xxgame",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "lint": "eslint src --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --check .",
    "build:engine": "node scripts/build.js",
    "test:engine": "node --experimental-specifier-resolution=node scripts/run-tests.js",
    "sim": "node scripts/sim-runner.js",
    "sim:baseline": "node scripts/sim-baseline.js",
    "sim:check": "node scripts/sim-check.js",
    "balance:dump": "node scripts/balance-dump.js",
    "electron:run": "npm run build && electron .",
    "dist:win": "npm run build && electron-builder --win",
    "dist:win:portable": "npm run build && electron-builder --win portable",
    "dist:win:portable:nosign": "npm run build && electron-builder --win portable"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^1.6.0",
    "electron": "^32.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.neezer.xxgame",
    "productName": "MysticWorkshopPrototype",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "signAndEditExecutable": false
    },
    "asar": true
  }
}
